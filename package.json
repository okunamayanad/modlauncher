{
  "name": "modlauncher",
  "version": "0.1.0",
  "description": "My Chrome Extension",
  "private": true,
  "scripts": {
    "dev": "webpack --mode=development --watch --config config/webpack.config.js",
    "build": "webpack --mode=production --config config/webpack.config.js",
    "pack": "node pack.js",
    "repack": "npm run build && npm run pack",
    "format": "prettier --write --ignore-unknown \"{config,public,src}/**/*.{html,css,js,ts,json}\"",
    "tailwind:build": "tailwindcss -i src/css/tailwind.css -o build/tailwind.css --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/chrome": "^0.0.181",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "adm-zip": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.11.0",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "prettier": "^2.8.8",
    "tailwindcss": "^4.1.11",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "webpack": "^5.100.2",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.10.0"
  },
  "dependencies": {
    "babel-loader": "^10.0.0",
    "html-webpack-plugin": "^5.6.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
